<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/curr_weather"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_marginStart="5dp"
    android:elevation="10dp"
    android:layout_marginEnd="5dp">

    <TextView
        android:id="@+id/jobTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfuimedium"
        android:gravity="center"
        android:padding="20dp"
        android:text="Job Detail"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/sfuimedium"
        android:text="Job : " />


        <TextView
            android:id="@+id/job_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_below="@id/job"
            android:fontFamily="@font/sfuimedium"
            android:text="100%" />

        <TextView
            android:id="@+id/pj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/job_result"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/sfuimedium"
            android:text="Responsible Person :" />

        <TextView
            android:id="@+id/pj_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pj"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/sfuimedium"
            android:text="Clouds" />

        <TextView
            android:id="@+id/created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pj_result"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/sfuimedium"
            android:text="Created At :"/>

        <TextView
            android:id="@+id/created_at_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/created_at"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/sfuimedium"
            android:text="Clouds" />

        <Button
            android:id="@+id/okbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/created_at"
            android:layout_marginStart="100dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/sfuimedium"
            android:gravity="center"
            android:text="OK" />


</RelativeLayout>
